<!DOCTYPE html>
<!-- saved from url=(0037)http://bootstrapk.com/examples/theme/ -->
<html lang="en" style="width: 600px; ">
<head>
	<!-- header -->
<% include ../head.ejs %>

<script>
	
$(document).ready(function(){
	<% if(login===null || userId===null || auth===null || value === null || value.tradeState===null){ %>
		alert('잘못된 접근입니다.');
		window.history.go(-1);
	<%}else{%>
	
	$("#tradeState").append('<%=value.tradeState%>');
	$("#tradeUpdateTime").append('<%=value.tradeUpdateTime%>');
	$("#tradeSenderName").append('<%=value.tradeSenderName%>');
	$("#tradeSenderLoc").append('<%=value.tradeSenderLoc%>');
	$("#tradeSenderTime").append('<%=value.tradeSenderTime%>');
	$("#tradeReceiverName").append('<%=value.tradeReceiverName%>');
	$("#tradeReceiverLoc").append('<%=value.tradeReceiverLoc%>');
	$("#tradeReceiverPhone").append('<%=value.tradeReceiverPhone%>');
	$("#tradeNum").append('<%=value.tradeNum%>');
	$("#tradeName").append('<%=value.tradeName%>');
	$("#tradeCost").append('<%=value.tradeCost%>');
	$("#tradeWeight").append('<%=value.tradeWeight%>');
	$("#tradeSize").append('<%=value.tradeSize%>');
	$("#tradeMemo").append('<%=value.tradeMemo%>');
	$("#tradeDriverName").append('<%=value.tradeDriverName%>');
	$(".tradeNum").attr("value",'<%=value.tradeNum%>');
	console.log('hey');
	
	
	<%if(auth === 'sender'){ %>
	<%	if(value.tradeState === '0'){%>
		$("#btnModify").css('visibility','visible');
	
	<%	}else if(value.tradeState === '1'){%>
		$("#btnReviewRequest").css('visibility','visible');
	<%	}%>
	<%}else if( auth === 'driver'){%>
		$("#tradeDriverName").append('<%=userId%>');
	<%}%>
	
	$("#btnReviewRequest").on("click",function(){
		window.open("","popup_window", "width=500, height=300, scrollbars=no");
		$("#reviewReq").submit();
	});
	<%}%>
});
function goModify(){
	console.log('go modify');
}
function reviewRequest(){
	console.log('inspectDriver');
	
}
</script>

	

</head>
	

